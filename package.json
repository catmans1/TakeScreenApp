{
  "name": "screen-app",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Daniel Le",
    "email": "iu.developer232@yahoo.com"
  },
  "license": "MIT",
  "keywords": [
    "electron",
    "reactjs",
    "desktopapp"
  ],
  "main": "build/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "cross-env PORT=3333 concurrently -n React,Electron -c cyan,green \"BROWSER=none yarn start:react\" \"wait-on http://localhost:3333 && tsc -p src/electron && electron .\"",
    "build": "yarn build:react-electron && electron-builder",
    "build:all": "yarn build:css && yarn build:react-electron && electron-builder build -mwl",
    "build:mac": "yarn build:react-electron && electron-builder build --mac",
    "start:react": "yarn watch:css && react-scripts start",
    "build:react": "yarn build:css && react-scripts build",
    "build:react-electron": "react-scripts build && tsc -p src/electron",
    "build:css": "postcss src/reactjs/css/tailwind.css -o src/reactjs/css/main.css",
    "watch:css": "postcss src/reactjs/css/tailwind.css -o src/reactjs/css/main.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "jimp": "^0.16.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-rnd": "^10.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "autoprefixer": "^10.2.4",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "electron-reloader": "^1.2.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.6",
    "postcss-cli": "8.3.1",
    "tailwindcss": "^2.0.3",
    "wait-on": "^5.2.1"
  },
  "build":{
    "appId": "com.share-wis.recorder",
    "files":[
      "build/**/*",
      "package.json",
      "public/icon.png"
    ],
    "mac":{

    }
  }
}
